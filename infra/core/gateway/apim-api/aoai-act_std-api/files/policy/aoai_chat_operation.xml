<!--
    - Policies are applied in the order they appear.
    - Position <base/> inside a section to inherit policies from the outer scope.
    - Comments within policies are not preserved.
-->
<!-- Add policies as children to the <inbound>, <outbound>, <backend>, and <on-error> elements -->
<policies>
    <!-- Throttle, authorize, validate, cache, or transform the requests -->
    <inbound>
        <authentication-managed-identity resource="https://cognitiveservices.azure.com" />
        <set-backend-service backend-id="${backendpool}" />
        <!--<include-fragment fragment-id="backend-aoai" />-->
        <llm-emit-token-metric namespace="AzureOpenAI">
            <dimension name="API ID" />
            <dimension name="Subscription ID" />
            <dimension name="Operation ID" />
        </llm-emit-token-metric>
        <llm-token-limit tokens-per-minute="${tpmlimittoken}" counter-key="@(context.Subscription.Id)" estimate-prompt-tokens="true" tokens-consumed-header-name="consumed-tokens" remaining-tokens-header-name="remaining-tokens" />
    </inbound>
    <!-- Control if and how the requests are forwarded to services  -->
    <backend>
        <base />
        <!--<include-fragment fragment-id="backend-aoai-retry" />-->
    </backend>
    <!-- Customize the responses -->
    <outbound>
        <base />
    </outbound>
    <!-- Handle exceptions and customize error responses  -->
    <on-error>
        <base />
    </on-error>
</policies>
